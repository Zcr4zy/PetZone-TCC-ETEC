@model Pet

<style>
body{
    background: linear-gradient(to right, rgb(255,255,255), rgb(192,192,192));
        color:#ffffff;
}
#card{
    border:3px solid rgb(121,121,121);
    margin-top: 0px;
    width: 840px;
    border-color: black;
    padding-top:15px;
    padding-bottom:-50px;
    padding-left: 15px;
    padding-right:15px;
}

#titulo{
    text-align:center;
    font-size: 35px;
}

#descricao{
    text-align:center;
    font-size: 17px;
    color: black;
}

#centro{
    text-align:center;
    color:black;
    font-size: 16px;
}

</style>

 <div class="container mt-5" id="card">
        <div class="card" style="border-color:black;">
             <div class="card-block">
                 <br />
                <h2 class="card-title" id="titulo" style="color:black">@Model.Nome</h2><br />
             </div>

            <div class="text-center">
                <img src="@Model.ImgLink" class="img-fluid" alt="" style="height:300px; width:450px; border-color:black" /><br />
                <img src="@Model.ImgLinkII" class="img-fluid" alt=""  />
            </div>
            <div class="card-block" style="color:black">
                <p class="card-text" id="descricao">@Model.Descricao</p>
                <p class="card-text"><h5 id="centro">Raça: @Model.Raca.Nome</h5></p>
                <p class="card-text"><h5 id="centro">Espécie: @Model.Raca.Especie.Nome</h5></p>
                <p class="card-text"><h5 id="centro">Gênero: @Model.Genero.Nome</h5></p>
                <p class="card-text"><h5 id="centro">Idade: @Model.Idade</h5></p>
                <p class="card-text"><h5 id="centro">Peso: @Model.Peso</h5></p><br />
               


                <p class="btn btn-group align-content-lg-end">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Retornar a Página Inicial</a>
                </p>
            </div>
        </div>
</div>
